{
  "name": "hisn-al-muslim",
  "displayName": "hisn al-muslim",
  "description": "hisn al muslim ",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:zekir.azkar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zekir.azkar",
        "title": "Azkar"
      }
    ]
  },
  "configuration": [
    {
      "title": "Zekir",
      "properties": {
        "zekir.interval": {
          "type": "integer",
          "default": 30,
          "description": "The interval between each Azkar in minutes"
        },
        "fazakir.notificationType": {
          "type": "string",
          "default": "side",
          "enum": [
            "side",
            "modal"
          ],
          "description": "Do you want the Azkar to show up in the middle (with sound) or on the side (silent)"
        }
      }
    }
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "axios": "^0.27.2"
  }
}